---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Seo from '../components/Seo.astro';
import '../styles/global.css';
import '../styles/theme.css';

interface Props {
	title?: string;
	description?: string;
	seoType?: 'website' | 'article';
	image?: string;
}

const GA_ID = 'G-7Y4NLGNMD3';
const isProd = import.meta.env.MODE === 'production';
const defaultDescription = '김민석의 포트폴리오와 기술 블로그.';
const { title = '김민석 · Astro 포트폴리오', description, seoType = 'website', image } =
	Astro.props as Props;
---

<!doctype html>
<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="google-site-verification" content="N3LgsarXgf8bqg5HCpqkwSfmmdHjSp2crgpuW6Aopr8" />
		<Seo title={title} description={description ?? defaultDescription} type={seoType} image={image} />
		{isProd && GA_ID && (
			<>
				<script async src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`}></script>
				<script>
					{`
						window.dataLayer = window.dataLayer || [];
						function gtag(){dataLayer.push(arguments);}
						gtag('js', new Date());
						gtag('config', '${GA_ID}');

						const trackPageView = (url) => {
							if (!window.gtag) return;
							gtag('event', 'page_view', {
								page_path: url,
							});
						};

						// 초기 로드
						trackPageView(location.pathname + location.search);

						// SPA 스타일 내비게이션 대응 (history API 감지)
						const originalPushState = history.pushState;
						const originalReplaceState = history.replaceState;
						const handleRouteChange = () => trackPageView(location.pathname + location.search);

						history.pushState = function (...args) {
							originalPushState.apply(this, args);
							handleRouteChange();
						};
						history.replaceState = function (...args) {
							originalReplaceState.apply(this, args);
							handleRouteChange();
						};
						window.addEventListener('popstate', handleRouteChange);
					`}
				</script>
			</>
		)}
	</head>
	<body>
		<Header />
		<main class="container">
			<slot />
		</main>
		<Footer />
	</body>
</html>

