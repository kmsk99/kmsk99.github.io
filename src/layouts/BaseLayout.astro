---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Seo from '../components/Seo.astro';
import { SITE, absoluteUrl } from '../config/seo';
import '../styles/global.css';
import '../styles/theme.css';

interface Breadcrumb {
	label: string;
	url: string;
}

interface Props {
	title?: string;
	description?: string;
	seoType?: 'website' | 'article';
	image?: string;
	publishedTime?: string;
	modifiedTime?: string;
	tags?: string[];
	breadcrumbs?: Breadcrumb[];
	noindex?: boolean;
}

const GA_ID = 'G-7Y4NLGNMD3';
const isProd = import.meta.env.MODE === 'production';
const {
	title = SITE.title,
	description = SITE.description,
	seoType = 'website',
	image,
	publishedTime,
	modifiedTime,
	tags = [],
	breadcrumbs = [],
	noindex = false,
} = Astro.props as Props;

const siteUrl = Astro.site ?? SITE.url;
const canonical = siteUrl ? new URL(`${Astro.url.pathname}${Astro.url.search}`, siteUrl).toString() : undefined;
const resolvedImage = absoluteUrl(image ?? SITE.defaultImage, siteUrl);

const breadcrumbStructured =
	breadcrumbs.length > 0
		? {
				'@context': 'https://schema.org',
				'@type': 'BreadcrumbList',
				itemListElement: breadcrumbs.map((crumb, index) => ({
					'@type': 'ListItem',
					position: index + 1,
					name: crumb.label,
					item: absoluteUrl(crumb.url, siteUrl) ?? canonical,
				})),
		  }
		: null;

const structuredData = [
	{
		'@context': 'https://schema.org',
		'@type': 'WebSite',
		url: siteUrl,
		name: SITE.title,
		description: SITE.description,
		inLanguage: 'ko',
	},
	...(breadcrumbStructured ? [breadcrumbStructured] : []),
	...(seoType === 'article' && canonical
		? [
				{
					'@context': 'https://schema.org',
					'@type': 'BlogPosting',
					headline: title,
					description: description ?? SITE.description,
					url: canonical,
					mainEntityOfPage: canonical,
					datePublished: publishedTime ?? undefined,
					dateModified: modifiedTime ?? publishedTime ?? undefined,
					author: SITE.author?.name
						? {
								'@type': 'Person',
								name: SITE.author.name,
								url: SITE.author.url ?? siteUrl,
						  }
						: undefined,
					image: resolvedImage ? [resolvedImage] : undefined,
					keywords: tags.length ? tags : undefined,
					publisher: SITE.author?.name
						? {
								'@type': 'Person',
								name: SITE.author.name,
								url: SITE.author.url ?? siteUrl,
						  }
						: undefined,
				},
		  ]
		: []),
];
---

<!doctype html>
<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="google-site-verification" content="N3LgsarXgf8bqg5HCpqkwSfmmdHjSp2crgpuW6Aopr8" />
		<link rel="alternate" type="application/rss+xml" title={SITE.title} href="/rss.xml" />
		<link rel="sitemap" href="/sitemap-index.xml" />
		<Seo
			title={title}
			description={description ?? SITE.description}
			type={seoType}
			image={resolvedImage}
			canonical={canonical}
			structuredData={structuredData}
			publishedTime={publishedTime}
			modifiedTime={modifiedTime}
			tags={tags}
			noindex={noindex}
		/>
		{isProd && GA_ID && (
			<>
				<script is:inline src={`https://www.googletagmanager.com/gtag/js?id=${GA_ID}`} async></script>
				<script is:inline define:vars={{ GA_ID }}>
					window.dataLayer = window.dataLayer || [];
					function gtag(){dataLayer.push(arguments);}
					gtag('js', new Date());
					gtag('config', GA_ID);
				</script>
			</>
		)}
	</head>
	<body>
		<Header />
		<main class="container">
			<slot />
		</main>
		<Footer />
	</body>
</html>

