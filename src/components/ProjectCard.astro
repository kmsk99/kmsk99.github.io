---
import type { CollectionEntry } from 'astro:content';

interface Props {
	entry: CollectionEntry<'projects'>;
}

const { entry } = Astro.props as Props;
---

<article class="card" data-tags={entry.data.tags?.join(',') ?? ''} data-type="project">
	<p class="eyebrow">{entry.data.created}</p>
	<h3 class="card__title">
		<a href={`/projects/${entry.slug}`}>{entry.data.title}</a>
	</h3>
	{entry.data.summary && <p class="card__summary">{entry.data.summary}</p>}
	{entry.data.tags && (
		<div class="chips">
			{entry.data.tags.slice(0, 4).map((tag) => (
				<span class="chip">{tag}</span>
			))}
		</div>
	)}
</article>

