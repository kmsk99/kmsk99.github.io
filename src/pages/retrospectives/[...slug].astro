---
import { getCollection } from 'astro:content';
import RetrospectiveLayout from '../../layouts/RetrospectiveLayout.astro';

export async function getStaticPaths() {
	const retros = await getCollection('retrospectives');
	return retros.map((ret) => ({
		// 파일 경로(id)가 이미 디렉토리 구조를 포함하므로 그대로 사용
		params: { slug: ret.id },
		props: { entry: ret },
	}));
}

const { entry } = Astro.props;
---

<RetrospectiveLayout entry={entry} />

